# ============================================
# SERVER CONFIGURATION
# ============================================

# Port number for the server (default: 5500)
PORT=5500

# API prefix for all routes (default: /api/v1)
PREFIX=/api/v1

# Node environment: development, production, or test
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB connection URL (replace <db_username> and <db_password> with actual credentials)
DB_URL=mongodb+srv://<db_username>:<db_password>@cluster0.bktbm8k.mongodb.net/?appName=Cluster0

# MongoDB username
DB_USERNAME=your_mongodb_username

# MongoDB password
DB_PASSWORD=your_mongodb_password

# ============================================
# JWT CONFIGURATION
# ============================================

# JWT secret key (MUST be at least 32 characters for security)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_please_change_this

# JWT token expiration time (e.g., 1d, 7d, 24h)
JWT_EXPIRES_IN=1d

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed origins for CORS (use * for all origins in development, specific URLs in production)
# For multiple origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*

# ============================================
# RATE LIMITING (Optional - has defaults)
# ============================================

# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100