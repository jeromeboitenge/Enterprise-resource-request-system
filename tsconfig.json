{
  "compilerOptions": {
    "target": "ES2022",              // modern JS
    "module": "ES2022",              // use ES Modules
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
