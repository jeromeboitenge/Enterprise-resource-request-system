{
  "compilerOptions": {
    "target": "ES2022", // modern JS
    "module": "commonjs", // use CommonJS for Node.js
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}